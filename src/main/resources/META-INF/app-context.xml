<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="view" class="com.AddressBook.AddressBookView" init-method="init">
        <property name="contentPane" ref="mainPanel"/>
        <property name="title" value="Address book"/>
        <property name="size" ref="viewSize"/>
    </bean>
    <bean id="viewSize" class="java.awt.Dimension">
        <constructor-arg value="600"/>
        <constructor-arg value="400"/>
    </bean>
    <bean id="model" class="com.AddressBook.AddressBookModel"/>
    <bean id="mainPanel" class="com.AddressBook.BoxLayoutPanel" init-method="init">
        <property name="axis" value="1"/>
        <property name="panelComponents">
            <list>
                <ref bean="namePanel"/>
                <ref bean="phonePanel"/>
                <ref bean="buttonPanel"/>
            </list>
        </property>
    </bean>
    <bean id="nameTextField" class="javax.swing.JTextField"/>
    <bean id="phoneTextField" class="javax.swing.JTextField"/>
    <bean id="nameLabel" class="javax.swing.JLabel">
        <constructor-arg value="Name:  "/>
    </bean>
    <bean id="phoneLabel" class="javax.swing.JLabel">
        <constructor-arg value="Phone: "/>
    </bean>
    <bean id="namePanel" class="com.AddressBook.BoxLayoutPanel" init-method="init">
        <property name="axis" value="0"/>
        <property name="panelComponents">
            <list>
                <ref bean="nameLabel"/>
                <ref bean="nameTextField"/>
            </list>
        </property>
    </bean>
    <bean id="phonePanel" class="com.AddressBook.BoxLayoutPanel" init-method="init">
        <property name="axis" value="0"/>
        <property name="panelComponents">
            <list>
                <ref bean="phoneLabel"/>
                <ref bean="phoneTextField"/>
            </list>
        </property>
    </bean>
    <bean id="buttonPanel" class="com.AddressBook.BoxLayoutPanel" init-method="init">
        <property name="axis" value="0"/>
        <property name="panelComponents">
            <list>
                <ref bean="addBuddyButton"/>
                <ref bean="printBuddiesButton"/>
            </list>
        </property>
    </bean>
    <bean id="addBuddyButton" class="com.AddressBook.ActionListenerButton" init-method="init">
        <property name="actionListener" ref="addNewButtonActionListener"/>
        <property name="text" value="Add Buddy"/>
    </bean>
    <bean id="addNewButtonActionListener" class="com.AddressBook.AddBuddyActionListener">
        <property name="model" ref="model"/>
        <property name="nameField" ref="nameTextField"/>
        <property name="phoneField" ref="phoneTextField"/>
    </bean>
    <bean id="printBuddiesButton" class="com.AddressBook.ActionListenerButton" init-method="init">
        <property name="actionListener" ref="printBuddiesButtonActionListener"/>
        <property name="text" value="Print buddies"/>
    </bean>
    <bean id="printBuddiesButtonActionListener" class="com.AddressBook.PrintBuddiesActionListener">
        <property name="model" ref="model"/>
    </bean>
</beans>